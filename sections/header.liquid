                    <span class="fas fa-search fa-fw" aria-hidden="true"></span>
                    <span class="fallback-text">{{ 'general.search.title' | t }}</span>
                  </span>
                </a>
              </li>
              {% endif %}

              <li class="site-nav__item">
                <a href="/cart" class="site-nav__link site-nav__link--icon cart-link js-drawer-open-button-right" aria-controls="CartDrawer">
                  <span class="icon-fallback-text">
                    <span class="fas fa-shopping-{{ settings.cart_icon }} fa-fw" aria-hidden="true"></span>
                    <span class="fallback-text">{{ 'layout.cart.title' | t }}</span>
                  </span>
                  <span class="cart-link__bubble {% if cart.item_count > 0 %} cart-link__bubble--visible{% endif %} ">{{ cart.item_count }}</span>
<!--                   <span class="cart-link__bubble animated infinite rubberBand {% if cart.item_count > 0 %} cart-link__bubble--visible{% endif %} ">{{ cart.item_count }}</span> -->
                </a>
              </li>
            </ul>
          </div>

        </div>
        {% if section.settings.show_phone_number %}
        	<div class="phone-line__mobile phone">
              <a href="tel:{{ section.settings.numbers_phone_number }}">
                <span>{{ section.settings.text_phone_number }}</span> 
              </a>
          	</div>
          {% endif %}
