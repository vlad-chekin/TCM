<div class="custom-popup__wrapper popup_block" style="display: none;">
  <div class="custom-popup popup-body">
    <div class="custom-popup__inner">
      <span class="custom-popup__close close-popup"><svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M14 1.41L12.59 0L7 5.59L1.41 0L0 1.41L5.59 7L0 12.59L1.41 14L7 8.41L12.59 14L14 12.59L8.41 7L14 1.41Z" fill="black"/>
</svg></span>
      <p class="custom-popup__img">
        {% assign image_size = section.settings.height_logo | prepend: 'x' %}
        <img class="custom-popup__logo" src="{{ section.settings.popup_window_img | img_url: image_size }}"
                            
                            alt="{{ section.settings.popup_window_img.alt | default: shop.name }}"
                            itemprop="logo" />
      </p>
      <div class="custom-popup__content">
		  {{ section.settings.popup_window_html }}
          {% if section.blocks.size > 0 %}
            <ul class="popup-window__logo-bar">
              <!-- Blocks -->
              {% for block in section.blocks %}
                 <li class="popup-window__logo-bar__item" {{ block.shopify_attributes }}>
                   {% if block.settings.logo_popup_link != blank %}
                   		<a href="{{ block.settings.logo_popup_link }}" class="logo-bar__link">
                   {% endif %}
                    	{{ block.settings.logo_popup_image | img_url: '300x300' | img_tag: block.settings.logo_popup_image.alt, 'logo-bar__image' }}
                   {% if block.settings.logo_popup_link != blank %}
                   		</a>
                   {% endif %}      
                </li> 
              {% endfor %}
            </ul>
          {% endif %}
      </div>
      <p class="custom-popup__link">
          <a href="{{ section.settings.popup_window_link }}">
            {{ section.settings.popup_window_link_text }}
          </a>
      </p>
    </div>
  </div>
</div>
